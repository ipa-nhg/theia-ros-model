{
  "name": "ros-dsl",
  "keywords": [
    "theia-extension"
  ],
  "version": "0.0.0",
  "files": [
    "lib",
    "src",
    "build",
    "data",
    "css"
  ],
  "dependencies": {
    "@theia/core": "next",
    "sprotty-theia": "next",
    "ros-sprotty": "0.0.0"
  },
  "devDependencies": {
    "rimraf": "latest",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc",
    "watch": "tsc -w",
    "delete:build": "rimraf -rf ./build && mkdir build",
    "copy:roslanguageserver": "cp ../../ros-model/plugins/de.fraunhofer.ipa.ros.xtext.ide/target/de.fraunhofer.ipa.ros.xtext.ide-1.1.0-SNAPSHOT-ls.jar ./build/",
    "prepare": "yarn run clean && yarn run delete:build && yarn run copy:roslanguageserver && yarn run build "
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/ros-dsl-frontend-module",
      "backend": "lib/node/ros-dsl-backend-module"
    }
  ]
}
